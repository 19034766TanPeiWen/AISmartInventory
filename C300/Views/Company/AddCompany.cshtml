@model Company;
@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
      $(document).ready(function () {
         $('#JSDate')
            .datetimepicker({ format: 'YYYY-MM-DD' });

      });
    </script>
}
<form asp-controller="Company"
      asp-action="AddCompany"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Add Company</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="TradingAs">Trading As :</label>
        <div class="col-sm-5">
            <input asp-for="TradingAs" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="TradingAs" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UEN">UEN :</label>
        <div class="col-sm-5">
            <input asp-for="UEN" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UEN" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="IncorporationDate">IncorporationDate :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSDate" data-target-input="nearest">
                <input type="text" asp-for="IncorporationDate" asp-format="{0:yyy-MM-dd} class="form-control" />
                <div class="input-group-append" data-target="#JSDate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="IncorporationDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="RegisteredOffice">Registered Office :</label>
        <div class="col-sm-5">
            <input asp-for="RegisteredOffice" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="RegisteredOffice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>

