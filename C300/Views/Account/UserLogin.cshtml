@model UserLogin

<form asp-controller="Account"
      asp-action="UserLogin"
      method="post">

   <h2>Please Sign In</h2>
   <div class="col-sm-5">
      <div class="form-group row">
         <label asp-for="EmployeeNo" class="control-label">Employee No:</label>
         <input asp-for="EmployeeNo" class="form-control" />
         <span asp-validation-for="EmployeeNo" class="text-danger"></span>
      </div>

      <div class="form-group row">
          <label class="control-label col-sm-2" asp-for="CompanyId">Company:</label>
          <select asp-for="CompanyId" class="form-control" asp-items="@((SelectList)ViewData["Company"])"></select>
      </div>

      <div class="form-group row">
         <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">
               Remember Me
            </label>
         </div>
      </div>

      @if (ViewData["Message"] != null)
      {
         <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      }

      <div class="form-group row">
         <input type="submit" class="btn btn-primary" value="Login" />
      </div>

   </div>

</form>

